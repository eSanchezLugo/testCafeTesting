{
  "name": "testcafe-testing",
  "version": "1.0.0",
  "description": "Automated testing whit Testcafe",
  "main": "index.js",
  "scripts": {
    "test:chrome": "testcafe chrome ./tests -s takeOnFails=true  --disable-page-caching",
    "test:chrome:headless": "testcafe chrome ./tests -s takeOnFails=true --disable-page-caching",
    "test:chrome:mobile": "testcafe chrome:emulation:device=iphone X ./tests -s takeOnFails=true --disable-page-caching",
    "test:opera": "testcafe opera ./tests -s takeOnFails=true --disable-page-caching",
    "test:firefox": "testcafe firefox ./tests -s takeOnFails=true --disable-page-caching",
    "test:edge": "testcafe edge ./tests -s takeOnFails=true --disable-page-caching",
    "test:explorer": "testcafe ie ./tests -s takeOnFails=true --disable-page-caching"
  
  },
  "keywords": [
    "TestCafe",
    "Testing",
    "Automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "prettier": "^2.2.1",
    "testcafe": "^1.10.0"
  }
}
